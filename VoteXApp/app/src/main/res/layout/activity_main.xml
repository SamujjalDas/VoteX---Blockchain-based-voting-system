<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <android.support.v7.widget.CardView
        android:id="@+id/top_card"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardElevation="10dp"
        android:layout_alignParentTop="true" >

        <RelativeLayout
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="gravity"
                android:gravity="center"
                android:textSize="60sp"
                android:textColor="#ffffff"
                android:fontFamily="sans-serif-condensed"
                android:layout_centerInParent="true"
                android:text="VoteX" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="132dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="53dp"
                android:layout_height="56dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/candidate" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="219dp"
                android:layout_height="53dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="60dp"
                android:gravity="center"
                android:text="Candidates"
                android:textAlignment="gravity"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/imageView"
                android:background="#acac9f"
                android:text="TextView" />

            <Button
                android:id="@+id/John"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="94dp"
                android:backgroundTint="#d1d188"
                android:text="John"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/Ron"
                android:layout_marginLeft="10dp"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="123dp"
                android:backgroundTint="#d1d188"
                android:text="Ron"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/Harry"
                android:layout_marginLeft="10dp"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="25dp"
                android:backgroundTint="#d1d188"
                android:text="Harry"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/harryCount"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_alignBottom="@+id/Harry"
                android:layout_marginLeft="320dp"
                android:gravity="center"
                android:text=""
                android:textAlignment="gravity"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/ronCount"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_alignBottom="@+id/Ron"
                android:layout_marginLeft="320dp"
                android:gravity="center"
                android:text=""
                android:textAlignment="gravity"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/johnCount"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_alignBottom="@+id/John"
                android:layout_marginLeft="320dp"
                android:gravity="center"
                android:text=""
                android:textAlignment="gravity"
                android:textSize="30sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="110dp"
        android:elevation="10dp"></ProgressBar>

    <TextView
        android:id="@+id/dappText"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_above="@+id/dappAddress"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Contract address"
        android:textAlignment="gravity"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/dappAddress"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:hint="address"
        android:textAlignment="gravity"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/txText"
        android:layout_width="400dp"
        android:layout_height="30dp"
        android:layout_above="@+id/progressBar"
        android:textAlignment="gravity"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="transaction hash" />

    <TextView
        android:id="@+id/txHash"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/progressBar"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:text="" />
</RelativeLayout>